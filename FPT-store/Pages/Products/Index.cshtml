@page  "{id}"
@model FPT_store.Pages.Products.Index

@{
    ViewData["Title"] = "Products";
    Layout = "Shared/_Layout";
}

<div class="container">

    <div class="row">

        <div class="col-lg-3">
            <h1 class="my-4">Shop Name</h1>
            <div class="list-group">
                <a href="#" class="list-group-item active">Category 1</a>
                <a href="#" class="list-group-item">Category 2</a>
                <a href="#" class="list-group-item">Category 3</a>
            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            @if (Model.Product != null)
            {
                <div class="card mt-4">
                    <img class="card-img-top img-fluid" src="@Model.Product.Image" alt="">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Product.Name</h3>
                        <h4>$ @Model.Product.Price</h4>
                        <p class="card-text">@Model.Product.Description</p>
                    </div>
                </div>
            }
            else
            {
                <h3 class="text-danger">Not Found Product</h3>
                <a asp-page="/Index">Home Page</a>
            }

        </div>
        <!-- /.col-lg-9 -->

    </div>

</div>

@section Scripts
{
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <script>alert("@Model.Message")</script>
    }
}